{
  "name": "moleculer-api",
  "version": "0.2.10",
  "description": "A dynamic API Gateway for MoleculerJS which updates REST endpoints and aggregated GraphQL schema, access control policy for each action calls from metadata of remote services schema without restart or deployment.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "nodemon",
    "build": "rm -rf ./dist && tsc && copyfiles -u 1 src/**/*.html src/**/*.css dist/",
    "lint": "tslint -p tsconfig.json",
    "deps": "yarn-check -u",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test": "yarn test-with-examples --testPathIgnorePatterns=src/examples",
    "test-with-examples": "node --trace-warnings node_modules/.bin/jest --coverage --detectOpenHandles --forceExit"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/examples/index.ts"
  },
  "keywords": [
    "QMIT",
    "moleculer",
    "MSA",
    "microservice",
    "API Gateway",
    "gateway"
  ],
  "author": "QMIT Inc.",
  "dependencies": {
    "accept-language-parser": "^1.5.0",
    "apollo-server": "^2.9.7",
    "async-lock": "^1.2.2",
    "auth-header": "^1.0.0",
    "axax": "^0.2.2",
    "busboy": "^0.3.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "express": "^4.17.1",
    "express-useragent": "^1.0.13",
    "fastest-validator": "^1.0.0-beta4",
    "fs-capacitor": "^6.1.0",
    "graphql": "^14.5.8",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.0",
    "helmet": "^3.21.2",
    "kleur": "^3.0.3",
    "lodash": "^4.17.15",
    "lru-cache": "^5.1.1",
    "moleculer": "^0.14.0",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "node-fetch": "^2.6.0",
    "object-hash": "^2.0.2",
    "openid-client": "^3.10.0",
    "path-to-regexp": "^6.1.0",
    "qs": "^6.9.0",
    "smart-circular": "^1.0.2",
    "stream": "0.0.2",
    "subscriptions-transport-ws": "^0.9.16",
    "table": "^5.4.6",
    "tslib": "^1.10.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1",
    "ws": "^7.2.0"
  },
  "devDependencies": {
    "@types/accept-language-parser": "^1.5.1",
    "@types/async-lock": "^1.1.1",
    "@types/auth-header": "^1.0.1",
    "@types/bluebird": "^3.5.24",
    "@types/busboy": "^0.2.3",
    "@types/cookie": "^0.3.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.1",
    "@types/express-useragent": "^1.0.0",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/graphql-type-json": "^0.3.2",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.1.2",
    "@types/lodash": "^4.14.139",
    "@types/lru-cache": "^5.1.0",
    "@types/memorystream": "^0.3.0",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.7.1",
    "@types/node-fetch": "^2.5.2",
    "@types/object-hash": "^1.3.1",
    "@types/qs": "^6.5.3",
    "@types/table": "^4.0.7",
    "@types/uuid": "^3.4.6",
    "apollo-client": "^2.6.4",
    "benchmarkify": "^2.1.2",
    "copyfiles": "^2.1.1",
    "coveralls": "^3.0.6",
    "install": "^0.13.0",
    "jest": "^25.1.0",
    "jest-cli": "^25.1.0",
    "memorystream": "^0.3.1",
    "moleculer-qmit": "^1.0.12",
    "moleculer-repl": "^0.6.2",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^6.0.0",
    "typescript": "^3.7.3",
    "yarn-check": "^0.0.3"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "\\.ignore\\."
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qmit-pro/moleculer-api.git"
  },
  "license": "MIT"
}
